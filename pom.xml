		</dependency>


		<dependency>
			<groupId>org.grails.plugins</groupId>
			<artifactId>webxml</artifactId>
			<version>1.4.1</version>
			<scope>compile</scope>
			<type>zip</type>
		</dependency>


		<dependency>
			<groupId>org.grails.plugins</groupId>
			<artifactId>hibernate</artifactId>
			<version>${grails.version}</version>
			<scope>runtime</scope>
			<type>zip</type>
		</dependency>


		<dependency>
			<groupId>org.grails.plugins</groupId>
			<artifactId>spring-security-ldap</artifactId>
